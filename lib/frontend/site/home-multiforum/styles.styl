@import './forum-container/styles.styl'
@import './search/styles.styl'
@import './search/results-search/styles.styl'

.jumbotron_body
  padding: 50px 0 !important
  .container
    .lead
      font-size:18px
      margin-top: 5px
      &.highlight
        font-size:16px
        font-weight: 600
        text-shadow: none !important
      span
        color:$main-color
    .participar
      margin-top: 1rem
      margin: 10px;
      background-color: $main-color;
.ext-site-home-multiforum
  background: transparent

  .forums-list
    display: flex
    flex-direction: column
    flex-wrap: wrap
    padding-top: 1em

    .forums-list-title
      font-size: 35px
      text-align: center
      font-weight: 500
      margin-bottom: 20px

    .forums-list-item
      max-width: 100%
      width: 100%
      margin: 0 10px 20px

      @media (min-width: 992px)
        width: 440px

  .cover
    text-align: center
    min-height: 500px
    background-size: 100%;
    background-position: center;
    background-color: $main-color
    background-repeat: no-repeat
    background-image: url('/lib/frontend/site/home-multiforum/usina-abierta-web.png')
    display: flex
    @media screen and (max-width: 768px)
      min-height: 400px
      background-size: cover;
    .jumbotron_body
      text-transform: uppercase
      width: 100%;
      display: flex;
      align-items: center;
      h2 
        letter-spacing: 18px
        font-size: 65px
        line-height: 1.4
        text-transform: uppercase
        text-shadow: none
        span
          letter-spacing: 33px
        @media screen and (max-width: 500px)
          font-size: 50px
      .btn-primary
        background-color: white
        color: #ff4200
        box-shadow: none
        font-weight: 600
        border-radius: 5px 50px / 50px 15px;
        padding: 12px 20px;

  .arrow-down
    background-size: cover
    background-repeat: no-repeat
    display: inline-block
    margin-top: 0
    margin-right: 3%
    width: 70px
    height: 55px
    margin-bottom:20px
    @media screen and (max-width: 750px)
      width: 40px
      height: 30px
      margin-top:25px

  .lead-paragraph
    margin: 1.5em 0
    text-align: center
    font-size: 20px
    padding-left: 5%;
    padding-right: 5%;
    @media screen and (min-width: 1024px)
      padding-left: 15%;
      padding-right: 15%;
    &.last
      color: $main-color
      font-weight:bold
      flex-direction:column
      justify-content:center
      margin: 30px auto

    .bold {
      font-weight: 400
    }

    .skyblue {
      font-weight: 500;
    }
  .arrow
    text-align:center



  .section-icons
    font-weight:600
    margin-top:60px
    @media (max-width: 760px)
      margin-left:6%
    @media (max-width: 460px)
      margin-left:0
    .section-icon
      display: inline-block
      @media (max-width: 760px)
        display:flex
        flex-direction:column
        align-items: center;
        text-align: center;
        margin-bottom: 40px
      width:30% !important
      .icon
        width:130px
        float: left
        @media (max-width: 760px)
          width: 150px
      .text
        padding-left: 150px
        padding-top: 40px
        @media (max-width: 1015px)
          padding-top: 20px
          padding-left: 150px;
        @media (max-width: 760px)
          padding-left:10px
          padding-top: 10px
        font-weight: 100
        font-size: 14px

  .icon-arrow-down
    font-size: 30px
    color: $main-color
    cursor: pointer
    font-weight: bold

  .content-center
    display: flex;
    align-self: center;

    .btn
    .dropdown-element
    .dropbtn
      min-width:130px
      padding: 5px 25px 5px 25px !important

    .btn-secondary
      background-color: #fff

    .btn-active
      text-underline: none
      background-color: #e9e9e9
      color: $main-color
      &:focus
        outline: none

.dropbtn
  width:150px
  font-size:16px !important
  @media (min-width: 701px)
    display:none

.dropdown-element:hover .dropdown-content
  @media (max-width: 700px)
    display: block

.dropdown-content
  @media (max-width: 700px)
    li
      display:block
      margin-bottom:0

.dropdown-content
  @media (max-width: 700px)
    display: none
    position: absolute
    z-index: 1
    left: -14px
    top: 36px

.dropdown-element
  @media (max-width: 700px)
    position: relative
    display: inline-block

.small-arrow
  font-size:9px !important

.show-more
  height: 50px



