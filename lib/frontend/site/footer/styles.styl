.ext-footer
  padding 60px 0 0
  margin-top 30px
  font-size 1em
  background-color #fff
  border-top: 1px solid rgba(0, 0, 0, 0.1)

  .footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between
    position: relative
    &.footer-democracia
      font-family: "Roboto"
      min-height: 50px
      background-color: #8e4fcf
      color: #fff
      max-width: unset
      padding: 10px 0
      justify-content: center
      align-items: center
      a
        display: inline-block
        color: #fff
        position: absolute
        left: 10%
        font-size: 12px
        img
          height: 30px
          display: inline-block
          padding: 0 10px
          vertical-align: top
        span
          display: inline-block

  .institutional
    flex-grow 2

    p
      max-width 560px
  a
    color $main-link-color
    font-weight 400
    &:hover
      color $main-link-color-hover
      text-decoration underline

  .logo
    span
      display block
      color #aaa
      &:hover
        opacity 1

  .gob
    padding-right 30px
    margin-bottom 30px

    img
      max-width 100%
      width 200px

  .menu
    padding 0 15px
    text-align left

    &:first-of-type
      flex-grow 3

    a
      display block
      padding 6px 0

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px 30px

    .menu
      padding-right 0
      a
        display block
        line-height 1em

    .gob
      img
        width 200px

    .institutional
      padding 0 15px
